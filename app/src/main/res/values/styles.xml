<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar" id="tallerBarStyle" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:colorBackground">@color/main_green</item>

    </style>

    <style name="darkSpinner" parent="android:style/Widget.Spinner" id="darkSpinner">
        <item name="android:background">@color/white</item>
        <item name="android:dropDownSelector">@color/item_background</item>
    </style>


</resources>
