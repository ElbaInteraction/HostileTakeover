<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elbainteraction.hostiletakeover.MainMenuActivity"
    android:orientation="vertical"
    android:paddingTop="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:background="@color/background"
    android:weightSum="3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_weight="1">


        //NEW GAME
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mainmenu_new_game"
            android:id="@+id/new_game"
            android:onClick="goToNewGame"
            android:background="@drawable/green_button"

            android:textColor="@color/black"
            android:textSize="20sp"

            android:layout_above="@+id/continue_game"
            android:layout_alignLeft="@+id/continue_game"
            android:layout_alignStart="@+id/continue_game"
            android:layout_alignParentEnd="false"
            android:layout_weight="1"/>
        //LOGO
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src ="@drawable/web_hi_res_512"

            android:layout_above="@+id/continue_game"
            android:layout_toRightOf="@+id/new_game"
            android:layout_toEndOf="@+id/new_game"
            android:contentDescription="gameIcon"
            android:layout_weight="1"/>


    </LinearLayout>

    //CONTINUE GAME
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/mainmenu_continue"
        android:id="@+id/continue_game"
        android:onClick="goToContinueGame"
        android:background="@drawable/blue_button"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_weight="1"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_weight="1">
    //OPTIONS
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/mainmenu_options"
        android:id="@+id/options"
        android:onClick="goToOptions"
        android:background="@drawable/yellow_button"
        android:textColor="@color/black"
        android:textSize="20sp"

        android:layout_below="@+id/continue_game"
        android:layout_alignLeft="@+id/continue_game"
        android:layout_alignStart="@+id/continue_game"
        android:layout_alignParentEnd="false"
        android:layout_weight="1"
        />
    //LOG OUT
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/log_out_button"
        android:id="@+id/log_out"
        android:background="@drawable/red_button"
        android:textColor="@color/black"
        android:textSize="20sp"

        android:layout_below="@+id/continue_game"
        android:layout_alignRight="@+id/continue_game"
        android:layout_alignEnd="@+id/continue_game"
        android:layout_weight="1"/>

   </LinearLayout>

</LinearLayout>
